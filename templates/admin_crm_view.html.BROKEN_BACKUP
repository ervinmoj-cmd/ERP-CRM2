            document.head.appendChild(style);

            try {
                document.getElementById('emailModalBody').innerHTML = body;
                console.log('✅ Conversación renderizada exitosamente');
            } catch (error) {
                console.error('❌ Error al renderizar conversación:', error);
                document.getElementById('emailModalBody').innerHTML = `
                    <div style="text-align: center; padding: 40px; color: #dc3545;">
                        <p>❌ Error al renderizar la conversación</p>
                        <p style="font-size: 0.9em; color: #666;">${error.message || 'Error desconocido'}</p>
                        <button onclick="closeEmailModal()" style="margin-top: 20px; padding: 8px 16px; background: #6c757d; color: white; border: none; border-radius: 4px; cursor: pointer;">Cerrar</button>
                    </div>
                `;
                return;
            }

            // Scroll to bottom of thread
            const container = document.querySelector('.thread-container');
            if (container) container.scrollTop = container.scrollHeight;
        }

        // Handle attachment preview for reply form
        document.addEventListener('DOMContentLoaded', function () {
            const replyAttachmentsInput = document.getElementById('replyAttachments');
            if (replyAttachmentsInput) {
                replyAttachmentsInput.addEventListener('change', function (e) {
                    const files = Array.from(e.target.files);
                    const listDiv = document.getElementById('replyAttachmentsList');
                    listDiv.innerHTML = '';

                    files.forEach((file, index) => {
                        const fileItem = document.createElement('div');
                        fileItem.style.cssText = 'display: flex; align-items: center; gap: 8px; padding: 6px; background: #f5f5f5; border-radius: 4px; margin-bottom: 4px;';
                        fileItem.innerHTML = `
                            <span>${getFileIcon(file.name)}</span>
                            <span style="flex: 1; font-size: 0.9em;">${escapeHtml(file.name)} (${formatFileSize(file.size)})</span>
                            <button type="button" onclick="removeReplyAttachment(${index})" style="background: #dc3545; color: white; border: none; padding: 4px 8px; border-radius: 3px; cursor: pointer;">✕</button>
                        `;
                        listDiv.appendChild(fileItem);
                    });
                });
            }
        });

        function removeReplyAttachment(index) {
            const input = document.getElementById('replyAttachments');
            const dt = new DataTransfer();
            const files = Array.from(input.files);
            files.splice(index, 1);
            files.forEach(file => dt.items.add(file));
            input.files = dt.files;
            input.dispatchEvent(new Event('change'));
        }

        function getFileIcon(filename) {
            const ext = filename.split('.').pop().toLowerCase();
            if (['jpg', 'jpeg', 'png', 'gif', 'webp'].includes(ext)) return '🖼️';
            if (ext === 'pdf') return '📄';
            if (['doc', 'docx'].includes(ext)) return '📝';
            if (['xls', 'xlsx'].includes(ext)) return '📊';
            return '📎';
        }

        function formatFileSize(bytes) {
            if (bytes < 1024) return bytes + ' B';
            if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + ' KB';
            return (bytes / (1024 * 1024)).toFixed(1) + ' MB';
        }

        function sendReply(parentEmailId) {
            const replyText = document.getElementById('replyText').value.trim();
            const replyTo = document.getElementById('replyTo').value.trim();
            const replyCC = document.getElementById('replyCC').value.trim();
            const attachmentsInput = document.getElementById('replyAttachments');
            const files = attachmentsInput ? Array.from(attachmentsInput.files) : [];

            if (!replyText && files.length === 0) {
                alert('Por favor escribe un mensaje o adjunta un archivo');
                return;
            }
            if (!replyTo) {
                alert('Por favor especifica al menos un destinatario');
                return;
            }

            const statusSpan = document.getElementById('replyStatus');
            statusSpan.textContent = '⏳ Enviando...';
            statusSpan.classList.add('show');

            // Use FormData if there are files, otherwise JSON
            if (files.length > 0) {
                const formData = new FormData();
                formData.append('parent_email_id', parentEmailId);
                formData.append('mensaje', replyText);
                formData.append('destinatario', replyTo);
                formData.append('cc', replyCC);
                files.forEach((file, index) => {
                    formData.append(`attachment${index}`, file);
                });

                fetch(`/api/crm/deal/${dealId}/send-reply`, {
                    method: 'POST',
                    body: formData
                })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) {
                            statusSpan.textContent = `✅ Enviado${data.attachments_count ? ' con ' + data.attachments_count + ' adjunto(s)' : ''}`;
                            document.getElementById('replyText').value = '';
                            const attachmentsInput = document.getElementById('replyAttachments');
                            if (attachmentsInput) {
                                attachmentsInput.value = '';
                                document.getElementById('replyAttachmentsList').innerHTML = '';
                            }
                            setTimeout(() => {
                                // Refresh the conversation within the modal without closing it
                                viewThreadDetail(currentThreadId);
                                // Also refresh the sidebar list
                                loadEmails();
                                statusSpan.classList.remove('show');
                            }, 1000);
                        } else {
                            alert('Error al enviar: ' + (data.error || 'Desconocido'));
                            statusSpan.classList.remove('show');
                        }
                    })
                    .catch(err => {
                        alert('Error al enviar respuesta');
                        console.error(err);
                        statusSpan.classList.remove('show');
                    });
            } else {
                // No files, use JSON
                fetch(`/api/crm/deal/${dealId}/send-reply`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        parent_email_id: parentEmailId,
                        mensaje: replyText,
                        destinatario: replyTo,
                        cc: replyCC
                    })
                })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) {
                            statusSpan.textContent = '✅ Enviado';
                            document.getElementById('replyText').value = '';
                            setTimeout(() => {
                                viewThreadDetail(currentThreadId);
                                loadEmails();
                                statusSpan.classList.remove('show');
                            }, 1000);
                        } else {
                            alert('Error al enviar: ' + (data.error || 'Desconocido'));
                            statusSpan.classList.remove('show');
                        }
                    })
                    .catch(err => {
                        alert('Error al enviar respuesta');
                        console.error(err);
                        statusSpan.classList.remove('show');
                    });
            }
        }

        // Sync emails with client (IMAP)
        let isSyncing = false;

        function syncEmails(silent = false) {
            if (isSyncing) {
                console.log('⏳ Sincronización ya en progreso...');
                return;
            }

            isSyncing = true;
            const btn = document.getElementById('syncButton');
            const originalText = btn.innerHTML;

            if (!silent) {
                btn.disabled = true;
                btn.innerHTML = '⏳ Sincronizando...';
            }

            fetch(`/api/crm/deal/${dealId}/sync-emails`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            })
                .then(r => r.json())
                .then(data => {
                    if (data.success) {
                        if (!silent && data.synced_count > 0) {
                            // Using alert/console because showNotification implies a toast system not guaranteed to exist (it was not in the original code snippet)
                            // If showNotification existed I would use it. Let's assume standard behavior.
                            // Actually, I'll just rely on the UI updating.
                        }
                        loadEmails(); // Reload email list
                    } else {
                        if (!silent) {
                            alert(`❌ Error: ${data.error}`);
                        }
                    }
                    isSyncing = false;
                    btn.disabled = false;
                    btn.innerHTML = originalText;
                })
                .catch(err => {
                    if (!silent) {
                        alert('❌ Error al sincronizar');
                    }
                    console.error('Error sincronizando:', err);
                    isSyncing = false;
                    btn.disabled = false;
                    btn.innerHTML = originalText;
                });
        }

        // Load emails on page load
        loadEmails();

        // Auto-sync on page load (after 3 seconds)
        setTimeout(() => syncEmails(true), 3000);

        // OPTIMIZACIÓN: Auto-sync cada 10 segundos (casi en tiempo real)
        // Aparición mucho más rápida (casi inmediato si el servidor responde)
        setInterval(() => syncEmails(true), 10000); // 10 segundos

        // Refresh email list display cada 10 segundos (ligero)
        setInterval(loadEmails, 10000);
    </script>
</body>

</html>
