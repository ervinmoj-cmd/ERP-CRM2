                    </div>

                    <button onclick="guardarMensajeEmail()"
                        style="background: #28a745; color: white; padding: 10px 20px; border: none; border-radius: 6px; cursor: pointer; font-size: 0.95em; margin-top: 10px;">
                        💾 Guardar Mensaje
                    </button>
                    <span id="mensajeGuardado" style="color: #28a745; margin-left: 15px; display: none;">✅
                        Guardado</span>
                </div>
                {% endif %}

                <!-- Activities -->
                <div class="section">
                    <h3>📅 Actividades</h3>
                    {% if activities %}
                    <div class="activity-list">
                        {% for act in activities %}
                        <div class="activity-item{% if act.completada %} completed{% endif %}">
                            <div class="activity-icon">
                                {% if act.tipo == 'Llamada' %}📞{% elif act.tipo == 'Reunión' %}🤝{% elif act.tipo ==
                                'Email' %}📧{% else %}📌{% endif %}
                            </div>
                            <div class="activity-details">
                                <strong>{{ act.tipo }}: {{ act.descripcion or '-' }}</strong>
                                <small>{{ act.fecha_programada or 'Sin fecha' }}</small>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    {% else %}
                    <p class="empty-state">No hay actividades registradas</p>
                    {% endif %}
                </div>

                <!-- Actions -->
                <div class="actions-bar">
                    <a href="{{ url_for('admin_cotizaciones_nueva') }}?deal_id={{ deal.id }}{% if client %}&cliente_id={{ client.id }}{% endif %}"
                        class="btn btn-success">
                        📄 Generar Cotización
                    </a>

                    <a href="{{ url_for('admin_factura_nueva') }}?cliente_id={{ client.id if client else '' }}"
                        class="btn btn-primary">
                        📄 Generar Factura
                    </a>

                    <a href="{{ url_for('admin_pi_nueva') }}?deal_id={{ deal.id }}{% if client %}&cliente_id={{ client.id }}{% endif %}"
                        class="btn btn-warning">
                        📄 Generar PI
                    </a>

                    <a href="{{ url_for('admin_crm_editar', id=deal.id) }}" class="btn btn-secondary">
                        ✏️ Editar Trato
                    </a>
                </div>
            </div>
        </div>

        <!-- RIGHT PANEL: Email History with Client -->
        <div class="email-panel">
            <div class="email-header">
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <h2 style="margin: 0;">📧 Historial de Correos</h2>
                    <button onclick="syncEmails()" id="syncButton"
                        style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.5); color: white; padding: 8px 15px; border-radius: 8px; cursor: pointer; font-size: 0.9em; transition: all 0.2s;">
                        🔄 Sincronizar
                    </button>
                </div>
            </div>
            <div class="email-list" id="emailList">
                <div style="text-align: center; padding: 20px; color: #999;">
                    Cargando correos...
                </div>
            </div>
        </div>

    </div> <!-- Close main-layout -->

    <!-- Email Detail Modal -->
    <div class="email-modal" id="emailModal">
        <div class="email-modal-content">
            <div class="email-modal-header">
                <h3>📧 Detalle del Correo</h3>
                <button class="email-modal-close" onclick="closeEmailModal()">&times;</button>
            </div>
            <div class="email-modal-body" id="emailModalBody">
                <div style="text-align: center; padding: 40px; color: #999;">
                    Cargando...
                </div>
            </div>
        </div>
    </div>

    <script>
        // Contexts Definition
        // Mapeo de módulos a puestos
        const MODULE_TO_PUESTO = {
            'Ventas': 'Vendedor',
            'Finanzas': 'Contador',
            'Servicios': 'Gerente de Servicios Técnicos',
            'Compras': 'Compras',
            'Cotización': 'Cotizador'
        };

        // Mapeo de módulos a módulos internos (para templates)
        const MODULE_TO_INTERNAL = {
            'Ventas': 'ventas',
            'Finanzas': 'finanzas',
            'Servicios': 'servicios',
            'Compras': 'compras',
            'Cotización': 'cotizacion'
        };

        const CONTEXTS = {
            'Ventas': ['cotizacion'],
            'Finanzas': ['envio_factura', 'solicitud_factura'],
            'Servicios': ['orden_servicio']
        };

        const CONTEXT_LABELS = {
            'cotizacion': 'Cotización',
            'envio_factura': 'Envío de Factura',
            'solicitud_factura': 'Solicitud de Factura',
            'orden_servicio': 'Orden de Servicio'
        };

        function updateContextOptions() {
            const module = document.getElementById('msgModule').value;
            const contextSelect = document.getElementById('msgContext');
            const contexts = CONTEXTS[module] || [];

            contextSelect.innerHTML = '';
            contexts.forEach(ctx => {
                const option = document.createElement('option');
                option.value = ctx;
                option.textContent = CONTEXT_LABELS[ctx] || ctx;
                contextSelect.appendChild(option);
            });

            // Cargar automáticamente firma y mensaje cuando cambia el módulo
            loadModuleContent();
        }

        function loadModuleContent() {
            const dealId = {{ deal.id }}
        };
        }
        const module = document.getElementById('msgModule').value;
        const internalModule = MODULE_TO_INTERNAL[module] || module.toLowerCase();
        const puesto = MODULE_TO_PUESTO[module];

        if (!module || !puesto) return;

        console.log(`🔄 Cargando contenido para módulo: ${module} (puesto: ${puesto})`);

        // Mostrar indicador de carga
        document.getElementById('firmaVendedor').value = "Cargando firma...";
        document.getElementById('mensajeEnvio').value = "Cargando mensaje...";

        // Cargar en paralelo: template del módulo y usuarios del puesto
        Promise.all([
            // 1. Obtener template del módulo
            fetch(`/api/email-template/${internalModule}`)
                .then(r => r.json())
                .then(data => data.success ? data : { mensaje: '', firma: '' }),

            // 2. Obtener usuarios del puesto (para la firma)
            fetch(`/api/users/by-puesto/${puesto}`)
                .then(r => r.json())
                .then(data => data.success && data.users.length > 0 ? data.users[0] : null),

            // 3. Obtener mensaje personalizado del trato (si existe)
            fetch(`/api/crm/deal/${dealId}/email-content?module=${internalModule}`)
                .then(r => r.json())
                .catch(() => ({ success: false, mensaje: null, firma: null }))
        ]).then(([template, firstUser, dealMessage]) => {
            // PRIORIDAD 1: Mensaje personalizado del trato (si existe)
            const dealMsg = dealMessage?.mensaje || null;
            const dealFirma = dealMessage?.firma || null;

            // PRIORIDAD 2: Firma del usuario del puesto
            let firmaFinal = dealFirma;
            if (!firmaFinal && firstUser && firstUser.firma_email) {
                firmaFinal = firstUser.firma_email;
                console.log(`✅ Firma cargada del usuario: ${firstUser.nombre}`);
            } else if (!firmaFinal && template.firma) {
                firmaFinal = template.firma;
                console.log(`✅ Firma cargada del template del módulo`);
            }

            // PRIORIDAD 3: Mensaje del template del módulo
            let mensajeFinal = dealMsg;
            if (!mensajeFinal && template.mensaje) {
                mensajeFinal = template.mensaje;
                console.log(`✅ Mensaje cargada del template del módulo`);
            }

            // Aplicar valores
            document.getElementById('firmaVendedor').value = firmaFinal || '';
            document.getElementById('mensajeEnvio').value = mensajeFinal || '';

            // Actualizar texto de ayuda
            const helpText = document.getElementById('msgHelpText');
            if (firstUser) {
                helpText.textContent = `Firma cargada de: ${firstUser.nombre} (${puesto}). Puedes editarla y guardar.`;
            } else {
                helpText.textContent = `Template del módulo ${module}. Puedes personalizarlo y guardar.`;
            }

            console.log(`✅ Contenido cargado para módulo: ${module}`);
        }).catch(err => {
            console.error('Error cargando contenido del módulo:', err);
            document.getElementById('firmaVendedor').value = '';
            document.getElementById('mensajeEnvio').value = '';
        });
        }

        function loadMessage() {
            // Esta función ahora solo se usa cuando cambia el contexto
            // El contenido principal se carga en loadModuleContent()
            const dealId = {{ deal.id }}
        };
        const module = document.getElementById('msgModule').value;
        const context = document.getElementById('msgContext').value;

        if (!module || !context) return;

        // Si hay un mensaje personalizado guardado para este contexto, cargarlo
        // Por ahora, solo recargamos el contenido del módulo
        loadModuleContent();
        }

        function guardarMensajeEmail() {
            const dealId = {{ deal.id }}
        };
        const module = document.getElementById('msgModule').value;
        const internalModule = MODULE_TO_INTERNAL[module] || module.toLowerCase();
        const subject = document.getElementById('msgSubject').value;
        const firma = document.getElementById('firmaVendedor').value;
        const mensaje = document.getElementById('mensajeEnvio').value;
        const guardadoMsg = document.getElementById('mensajeGuardado');

        console.log(`💾 Guardando mensaje para módulo: ${module} (${internalModule})`);

        fetch(`/api/crm/deal/${dealId}/email-content`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                module: internalModule,
                mensaje: mensaje,
                firma: firma
            })
        })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    guardadoMsg.style.display = 'inline';
                    guardadoMsg.textContent = '✅ Guardado';
                    setTimeout(() => {
                        guardadoMsg.style.display = 'none';
                    }, 3000);
                    console.log(`✅ Mensaje guardado exitosamente para módulo: ${internalModule}`);
                } else {
                    alert('Error al guardar: ' + (data.error || 'Desconocido'));
                    console.error('Error al guardar:', data.error);
                }
            })
            .catch(err => {
                alert('Error al guardar el mensaje: ' + err.message);
                console.error('Error completo:', err);
            });
        }

        // Initialize on load
        document.addEventListener('DOMContentLoaded', function () {
            updateContextOptions(); // Load initial contexts
        });

        // ==================== CHAT SYSTEM ====================

        const dealId = {{ deal.id }};

        function loadMessages() {
            fetch(`/api/crm/deal/${dealId}/messages`)
                .then(r => r.json())
                .then(data => {
                    if (data.success) {
                        renderMessages(data.messages);
                    }
                })
                .catch(err => console.error('Error loading messages:', err));
        }

        function renderMessages(messages) {
            const container = document.getElementById('chatMessages');
            if (messages.length === 0) {
                container.innerHTML = '<div style="text-align: center; padding: 20px; color: #999;">No hay mensajes aún. ¡Sé el primero en escribir!</div>';
                return;
            }

            container.innerHTML = messages.map(m => {
                // Convert @mentions to highlighted spans
                let content = escapeHtml(m.mensaje);
                content = content.replace(/@(\w+)/g, '<span class="mention">@$1</span>');

                // Render attachments if any
                let attachmentsHtml = '';
                if (m.attachments && m.attachments.length > 0) {
                    attachmentsHtml = '<div style="margin-top: 8px; display: flex; flex-wrap: wrap; gap: 6px;">';
                    m.attachments.forEach(att => {
                        const isImage = att.mime_type && att.mime_type.startsWith('image/');
                        if (isImage) {
                            attachmentsHtml += `
                                <div style="position: relative; display: inline-block;">
                                    <img src="/api/attachments/${att.id}/preview" 
                                         alt="${escapeHtml(att.original_name)}"
                                         style="max-width: 150px; max-height: 150px; border-radius: 4px; cursor: pointer; border: 1px solid #ddd;"
                                         onclick="window.open('/api/attachments/${att.id}/preview', '_blank')"
                                         title="${escapeHtml(att.original_name)}">
                                    <a href="/api/attachments/${att.id}" download style="display: block; font-size: 0.75em; color: #1976d2; margin-top: 2px;">${escapeHtml(att.original_name)}</a>
                                </div>
                            `;
                        } else {
                            const icon = getFileIcon(att.original_name);
                            attachmentsHtml += `
                                <div style="display: inline-flex; align-items: center; gap: 4px; padding: 6px 10px; background: #f5f5f5; border-radius: 12px; border: 1px solid #ddd;">
                                    <span>${icon}</span>
                                    <a href="/api/attachments/${att.id}" download style="color: #1976d2; text-decoration: none; font-size: 0.9em;">${escapeHtml(att.original_name)}</a>
                                    <span style="color: #666; font-size: 0.8em;">(${formatFileSize(att.size)})</span>
                                </div>
                            `;
                        }
                    });
                    attachmentsHtml += '</div>';
                }

                return `
                    <div class="message">
                        <div class="message-header">
                            <span class="message-author">${escapeHtml(m.nombre || m.username)}</span>
                            <span class="message-time">${timeAgo(m.created_at)}</span>
                        </div>
                        <div class="message-content">${content}</div>
                        ${attachmentsHtml}
                    </div>
                `;
            }).join('');

            // Scroll to bottom
            container.scrollTop = container.scrollHeight;
        }

        function handleMessageAttachmentsChange() {
            const input = document.getElementById('messageAttachments');
            const files = Array.from(input.files);
            const listDiv = document.getElementById('messageAttachmentsList');
            listDiv.innerHTML = '';

            files.forEach((file, index) => {
                const fileItem = document.createElement('div');
                fileItem.style.cssText = 'display: flex; align-items: center; gap: 4px; padding: 4px 8px; background: #e3f2fd; border-radius: 12px; font-size: 0.85em;';
                fileItem.innerHTML = `
                    <span>${getFileIcon(file.name)}</span>
                    <span>${escapeHtml(file.name)}</span>
                    <span style="color: #666;">(${formatFileSize(file.size)})</span>
                    <button type="button" onclick="removeMessageAttachment(${index})" style="background: none; border: none; color: #dc3545; cursor: pointer; padding: 0 4px;">✕</button>
                `;
                listDiv.appendChild(fileItem);
            });
        }

        function removeMessageAttachment(index) {
            const input = document.getElementById('messageAttachments');
            const dt = new DataTransfer();
            const files = Array.from(input.files);
            files.splice(index, 1);
            files.forEach(file => dt.items.add(file));
            input.files = dt.files;
            handleMessageAttachmentsChange();
        }

        function sendMessage() {
            const input = document.getElementById('chatInput');
            const mensaje = input.value.trim();
            const attachmentsInput = document.getElementById('messageAttachments');
            const files = attachmentsInput ? Array.from(attachmentsInput.files) : [];

            if (!mensaje && files.length === 0) {
                alert('Por favor escribe un mensaje o adjunta un archivo');
                return;
            }

            if (files.length > 0) {
                // Use FormData for files
                const formData = new FormData();
                formData.append('mensaje', mensaje || '(mensaje con adjuntos)');
                files.forEach((file, index) => {
                    formData.append(`attachment${index}`, file);
                });

                fetch(`/api/crm/deal/${dealId}/messages`, {
                    method: 'POST',
                    body: formData
                })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) {
                            input.value = '';
                            if (attachmentsInput) {
                                attachmentsInput.value = '';
                                document.getElementById('messageAttachmentsList').innerHTML = '';
                            }
                            loadMessages();
                        } else {
                            alert('Error al enviar mensaje: ' + (data.error || 'Desconocido'));
                        }
                    })
                    .catch(err => {
                        alert('Error al enviar mensaje');
                        console.error(err);
                    });
            } else {
                // No files, use JSON
                fetch(`/api/crm/deal/${dealId}/messages`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ mensaje: mensaje })
                })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) {
                            input.value = '';
                            loadMessages();
                        } else {
                            alert('Error al enviar mensaje: ' + (data.error || 'Desconocido'));
                        }
                    })
                    .catch(err => {
                        alert('Error al enviar mensaje');
                        console.error(err);
                    });
            }
        }

        function handleChatKeydown(e) {
            // Send on Ctrl+Enter or Cmd+Enter
            if (e.key === 'Enter' && (e.ctrlKey || e.metaKey)) {
                e.preventDefault();
                sendMessage();
            }
        }

        function escapeHtml(text) {
            const map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            return text.replace(/[&<>"']/g, m => map[m]);
        }

        function timeAgo(dateString) {
            const date = new Date(dateString);
            const now = new Date();
            const seconds = Math.floor((now - date) / 1000);

            if (seconds < 60) return 'Ahora';
            if (seconds < 3600) return `Hace ${Math.floor(seconds / 60)} min`;
            if (seconds < 86400) return `Hace ${Math.floor(seconds / 3600)} h`;
            return `Hace ${Math.floor(seconds / 86400)} días`;
        }

        // Load messages on page load
        loadMessages();

        // Refresh messages every 10 seconds
        setInterval(loadMessages, 10000);

        // ==================== EMAIL HISTORY SYSTEM (THREADED) ====================

        function loadEmails() {
            // Now fetches threads instead of individual emails
            fetch(`/api/crm/deal/${dealId}/threads`)
                .then(r => r.json())
                .then(data => {
                    if (data.success) {
                        renderThreads(data.threads);
                    }
                })
                .catch(err => console.error('Error loading threads:', err));
        }

        function renderThreads(threads) {
            const container = document.getElementById('emailList');
            if (threads.length === 0) {
                container.innerHTML = `
                    <div class="no-emails">
                        <div class="no-emails-icon">📭</div>
                        <div>No hay correos registrados aún</div>
                        <div style="font-size: 0.85em; margin-top: 10px;">
                            Los correos enviados automáticamente aparecerán aquí
                        </div>
                    </div>
                `;
                return;
            }

            container.innerHTML = threads.map(t => {
                const latest = t.latest_email;
                const unreadBadge = t.unread_count > 0
                    ? `<span class="thread-badge unread">${t.unread_count} nuevos</span>`
                    : '';
                const countBadge = `<span class="thread-counter">${t.message_count} mensajes</span>`;

                // Extract plain text preview
                let preview = latest.cuerpo || '';
                preview = preview.replace(/<[^>]*>/g, '');
                preview = preview.substring(0, 100);

                return `
                    <div class="email-item" onclick="viewThreadDetail('${t.thread_id}')">
                        <div class="email-item-header">
                            <div>
                                ${unreadBadge}
                                ${countBadge}
                            </div>
                            <span style="font-size: 0.75em; color: #999;">${timeAgo(latest.created_at)}</span>
                        </div>
                        <div class="email-subject">${escapeHtml(t.subject)}</div>
                        <div class="email-preview">${escapeHtml(preview)}...</div>
                        <div class="email-meta">
                            <span>${latest.direccion === 'salida' ? 'Último: Enviado' : 'Último: Recibido'}</span>
                        </div>
                    </div>
                `;
            }).join('');
        }

        let currentThreadId = null;

        function viewThreadDetail(threadId) {
            currentThreadId = threadId;
            document.getElementById('emailModal').classList.add('show');
            document.getElementById('emailModalBody').innerHTML = `
                <div style="text-align: center; padding: 40px; color: #999;">
                    Cargando conversación...
                </div>
            `;

            // 1. Mark as read in UI immediately
            // Find the thread element and remove the unread badge
            // We need to re-render or find the element. Since we don't have ID, let's just rely on loadEmails() refresh or do localized update?
            // Localized update is better. But we don't have easy selector.
            // Let's just call the API. The user will see it update on next sync/refresh? 
            // The user wants it to disappear "EN CUANTO ABRA".
            // So I should validly update the UI. To do that I need to efficiently find the element.
            // I'll re-render threads is simplistic but might be jarring.
            // Let's iterate elements? No.
            // I will update renderThreads to add IDs to elements.

            // 2. Mark as read in Backend
            fetch(`/api/crm/deal/${dealId}/thread-read`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ thread_id: threadId })
            }).then(() => {
                // Update UI *after* or *during* load?
                // Let's reload the list silently
                loadEmails();
            });

            // Load all messages for this thread
            fetch(`/api/crm/deal/${dealId}/thread-messages?thread_id=${encodeURIComponent(threadId)}`)
                .then(r => {
                    if (!r.ok) {
                        throw new Error(`HTTP ${r.status}: ${r.statusText}`);
                    }
                    return r.json();
                })
                .then(data => {
                    if (data.success) {
                        console.log(`✅ Cargados ${data.messages?.length || 0} mensajes para thread: ${threadId.substring(0, 50)}`);
                        renderThreadConversation(data.messages);
                    } else {
                        console.error('❌ Error en respuesta:', data.error);
                        document.getElementById('emailModalBody').innerHTML = `
                            <div style="text-align: center; padding: 40px; color: #dc3545;">
                                <p>❌ Error al cargar la conversación</p>
                                <p style="font-size: 0.9em; color: #666;">${data.error || 'Error desconocido'}</p>
                                <button onclick="closeEmailModal()" style="margin-top: 20px; padding: 8px 16px; background: #6c757d; color: white; border: none; border-radius: 4px; cursor: pointer;">Cerrar</button>
                            </div>
                        `;
                    }
                })
                .catch(err => {
                    console.error('❌ Error loading thread:', err);
                    document.getElementById('emailModalBody').innerHTML = `
                        <div style="text-align: center; padding: 40px; color: #dc3545;">
                            <p>❌ Error al cargar la conversación</p>
                            <p style="font-size: 0.9em; color: #666;">${err.message || 'Error de conexión'}</p>
                            <button onclick="closeEmailModal()" style="margin-top: 20px; padding: 8px 16px; background: #6c757d; color: white; border: none; border-radius: 4px; cursor: pointer;">Cerrar</button>
                        </div>
                    `;
                });
        }

        function closeEmailModal() {
            document.getElementById('emailModal').classList.remove('show');
            currentThreadId = null;
        }

        // Función para limpiar el cuerpo del mensaje eliminando texto citado
        // PRESERVA saltos de línea y formato original de forma robusta
        function cleanEmailBody(body) {
            if (!body) return '';

            // PASO 1: Normalizar saltos de línea  
            let normalized = body.replace(/\r\n/g, '\n').replace(/\r/g, '\n');
            const isHTML = /\u003c[a-z][\s\S]*\u003e/i.test(normalized);
            const isEscapedHTML = normalized.includes('\u0026lt;') || normalized.includes('\u0026gt;');

            // PASO 2: Si es HTML o HTML escapado, parsearlo y extraer solo texto
            if (isHTML || isEscapedHTML) {
                const tempDiv = document.createElement('div');

                // Si es HTML escapado, des-escapar primero
                if (isEscapedHTML \u0026\u0026!isHTML) {
                    const unescapeDiv = document.createElement('div');
                    unescapeDiv.textContent = normalized;
                    normalized = unescapeDiv.innerHTML;
                }

                // Parsear HTML
                try {
                    tempDiv.innerHTML = normalized;
                } catch (e) {
                    // Si falla el parseo, limpiar con regex básico
                    return normalized.replace(/\u003c[^\u003e]+\u003e/g, '').trim();
                }

                // Eliminar bloques de cita ANTES de extraer texto
                tempDiv.querySelectorAll('blockquote, .gmail_quote, .gmail_quote_container, [class*="gmail_quote"], .moz-cite-prefix, [class*="moz-cite"]').forEach(el =\u003e el.remove());

                // Reemplazar \u003cbr\u003e con saltos de línea
                tempDiv.querySelectorAll('br').forEach(br =\u003e br.replaceWith('\n'));

                // Agregar salto de línea después de bloques
                tempDiv.querySelectorAll('p, div').forEach((el, idx) =\u003e {
                    if(idx \u003e 0 \u0026\u0026 el.textContent.trim()) {
                    el.insertAdjacentText('beforebegin', '\n');
                }
            });

            // Extraer solo texto plano (sin tags HTML)
            let textContent = tempDiv.textContent || tempDiv.innerText || '';

            // PASO 3: Limpiar texto citado por patrones comunes
            const lines = textContent.split('\n');
            const filteredLines = [];
            let inQuote = false;

            for (let i = 0; i \u003c lines.length; i++) {
                const line = lines[i];
                const trimmed = line.trim();

                // Detectar inicio de cita
                if (trimmed.match(/^(El|On|De|From|Sent|Enviado).*(escribi[óo]|wrote):/i) ||
                    trimmed.match(/^From:\s*\u003c/i) ||
                    trimmed.match(/^[-_]{3,}$/) ||
                    trimmed.startsWith('\u003e')) {
                    inQuote = true;
                    continue;
                }

                // Si estamos en cita, saltar líneas
                if (inQuote) {
                    // Fin de cita: línea vacía seguida de contenido
                    if (trimmed === '' \u0026\u0026 i + 1 \u003c lines.length) {
                        const nextLine = lines[i + 1].trim();
                        if (!nextLine.startsWith('\u003e') \u0026\u0026
                        !nextLine.match(/^(El|On|De|From|Sent|Enviado).*(escribi[óo]|wrote):/i)) {
                            inQuote = false;
                            continue;
                        }
                    }
                    continue;
                }

                // Incluir línea si no es cita
                filteredLines.push(line);
            }

            textContent = filteredLines.join('\n');

            // PASO 4: Limpiar múltiples saltos de línea (máximo 2 consecutivos)
            textContent = textContent.replace(/\n{3,}/g, '\n\n').trim();

            return textContent || body;
        }

        // PASO 5: Si es texto plano, solo limpiar citas
        const lines = normalized.split('\n');
        const filteredLines = [];
        let inQuote = false;

        for (let i = 0; i \u003c lines.length; i++) {
            const line = lines[i];
            const trimmed = line.trim();

            if (trimmed.match(/^(El|On|De|From|Sent|Enviado).*(escribi[óo]|wrote):/i) ||
                trimmed.startsWith('\u003e')) {
                inQuote = true;
                continue;
            }

            if (inQuote \u0026\u0026 trimmed === '') {
                inQuote = false;
                continue;
            }

            if (!inQuote) {
                filteredLines.push(line);
            }
        }

        return filteredLines.join('\n').replace(/\n{3,}/g, '\n\n').trim() || body;
        }

        // PASO 0: Normalizar CRLF a LF y detectar formato
        let normalized = body.replace(/\r\n/g, '\n').replace(/\r/g, '\n');
        const isHTML = /<[a-z][\s\S]*>/i.test(normalized);
        const isEscapedHTML = normalized.includes('&lt;') || normalized.includes('&gt;');

        // Si es HTML escapado, des-escapar primero
        if (isEscapedHTML && !isHTML) {
            const tempDiv = document.createElement('div');
            tempDiv.textContent = normalized;
            normalized = tempDiv.innerHTML;
            // Actualizar flag después de des-escapar
            isHTML = /<[a-z][\s\S]*>/i.test(normalized);
        }

        let cleaned = normalized;

        // PASO 1: Si es HTML, parsearlo correctamente para extraer SOLO el texto
        let textContent = '';
        if (isHTML || isEscapedHTML) {
            // CRÍTICO: Usar DOM para parsear HTML correctamente y extraer solo texto
            // Esto elimina TODOS los tags HTML de forma confiable
            const tempDiv = document.createElement('div');
            // Asegurar que el HTML se parsea correctamente
            try {
                tempDiv.innerHTML = cleaned;
            } catch (e) {
                console.warn('Error parseando HTML, usando texto directo:', e);
                // Si falla el parseo, intentar limpiar con regex
                cleaned = cleaned.replace(/<[^>]+>/g, '');
                tempDiv.textContent = cleaned;
            }

            // Eliminar bloques de cita ANTES de extraer texto
            const blockquotes = tempDiv.querySelectorAll('blockquote');
            blockquotes.forEach(bq => bq.remove());
            const gmailQuotes = tempDiv.querySelectorAll('.gmail_quote, .gmail_quote_container, [class*="gmail_quote"]');
            gmailQuotes.forEach(q => q.remove());
            const mozQuotes = tempDiv.querySelectorAll('.moz-cite-prefix, [class*="moz-cite"]');
            mozQuotes.forEach(q => q.remove());

            // Convertir elementos de formato a saltos de línea ANTES de extraer texto
            const brElements = tempDiv.querySelectorAll('br');
            brElements.forEach(br => br.replaceWith('\n'));
            const pElements = tempDiv.querySelectorAll('p');
            pElements.forEach((p, idx) => {
                if (idx > 0) p.insertAdjacentText('beforebegin', '\n');
            });
            const divElements = tempDiv.querySelectorAll('div');
            divElements.forEach((div, idx) => {
                const hasText = div.textContent && div.textContent.trim().length > 0;
                if (hasText && idx > 0) {
                    div.insertAdjacentText('beforebegin', '\n');
                }
            });

            // Extraer SOLO el texto (esto elimina automáticamente TODOS los tags HTML)
            textContent = tempDiv.textContent || tempDiv.innerText || '';
        } else {
            // Si es texto plano, preservar tal cual (ya tiene saltos de línea)
            textContent = cleaned;
        }

        // PASO 3: Normalizar espacios múltiples (pero preservar saltos de línea)
        // Convertir múltiples espacios seguidos a uno solo, pero mantener saltos
        // IMPORTANTE: NO eliminar espacios alrededor de saltos de línea, solo normalizar espacios múltiples
        textContent = textContent.replace(/[ \t]+/g, ' '); // Múltiples espacios/tabs a uno (pero preservar \n)
        // NO hacer: textContent.replace(/[ \t]*\n[ \t]*/g, '\n') - esto elimina espacios importantes

        // PASO 4: Eliminar texto citado línea por línea (más preciso)
        // CRÍTICO: Preservar saltos de línea del contenido real
        const lines = textContent.split('\n');
        const filteredLines = [];
        let inQuote = false;
        let foundRealContent = false; // Para detectar si hay contenido real antes de las citas

        for (let i = 0; i < lines.length; i++) {
            const line = lines[i];
            const trimmed = line.trim();

            // Detectar inicio de cita (patrones comunes) - SOLO si ya encontramos contenido real
            if (!inQuote && foundRealContent) {
                if (trimmed.match(/^(El|On|De|From|Sent|Enviado).*(escribi[óo]|wrote):/i)) {
                    inQuote = true;
                    continue; // No incluir la línea de inicio de cita
                }
                if (trimmed.match(/^From:\s*</i) || trimmed.match(/^Date:\s*/i) || trimmed.match(/^Subject:\s*/i)) {
                    inQuote = true;
                    continue;
                }
                if (trimmed.startsWith('>')) {
                    inQuote = true;
                    continue;
                }
            }

            // Si no estamos en cita, marcar que encontramos contenido real
            // IMPORTANTE: Incluir la línea completa (con espacios/saltos) para preservar formato
            if (!inQuote) {
                if (trimmed.length > 0) {
                    foundRealContent = true;
                }
                // Incluir la línea completa (preserva saltos de línea y espacios)
                filteredLines.push(line);
                continue; // Continuar sin procesar más lógica de citas
            }

            // Si estamos en cita, detectar fin de cita
            if (inQuote) {
                // Fin de cita: línea vacía seguida de contenido que no es cita
                if (trimmed === '' && i + 1 < lines.length) {
                    const nextLine = lines[i + 1].trim();
                    if (!nextLine.startsWith('>') &&
                        !nextLine.match(/^(El|On|De|From|Sent|Enviado).*(escribi[óo]|wrote):/i) &&
                        !nextLine.match(/^From:\s*</i)) {
                        inQuote = false;
                        // No incluir la línea vacía si ya hay suficiente separación
                        continue;
                    }
                }

                // Si la línea empieza con > o es parte de headers de email, saltarla
                if (trimmed.startsWith('>') ||
                    trimmed.match(/^(From|Date|Subject|To|CC):/i) ||
                    trimmed.match(/^[-_]{3,}$/)) {
                    continue;
                }
            }
        }

        // PASO 5: Reconstruir contenido preservando saltos de línea
        textContent = filteredLines.join('\n');

        // PASO 6: Limpiar múltiples saltos de línea (máximo 2 consecutivos)
        textContent = textContent.replace(/\n{3,}/g, '\n\n');

        // PASO 7: Limpiar espacios al inicio y final (pero preservar estructura)
        textContent = textContent.trim();

        // PASO 8: Si quedó muy poco contenido, usar una limpieza más conservadora
        if (textContent.length < 20 && body.length > 100) {
            // Intentar limpieza más suave: solo eliminar bloques de cita obvios
            textContent = normalized.replace(/<blockquote[^>]*>[\s\S]*?<\/blockquote>/gi, '')
                .replace(/El\s+\w+\s+\d+\s+de\s+\w+\s+escribi[óo]:[\s\S]*$/i, '')
                .trim();
            if (textContent.length < 20) {
                textContent = normalized; // Si aún es muy corto, usar original
            }
        }

        // PASO 9: Retornar texto plano (NO convertir a HTML aquí, eso se hace en el renderizado)
        // Esto permite que el CSS white-space: pre-wrap funcione correctamente
        return textContent || body;
        }

        function renderThreadConversation(messages) {
            if (!messages || messages.length === 0) {
                console.warn('⚠️ No hay mensajes para renderizar');
                document.getElementById('emailModalBody').innerHTML = `
                    <div style="text-align: center; padding: 40px; color: #999;">
                        <p>📭 No hay mensajes en esta conversación</p>
                        <button onclick="closeEmailModal()" style="margin-top: 20px; padding: 8px 16px; background: #6c757d; color: white; border: none; border-radius: 4px; cursor: pointer;">Cerrar</button>
                    </div>
                `;
                return;
            }

            // DIAGNÓSTICO: Logs detallados antes de deduplicación
            console.log(`\n📊 DIAGNÓSTICO FRONTEND - Renderizando conversación`);
            console.log(`   Total mensajes recibidos: ${messages.length}`);
            const dbIds = messages.map(m => m.id).filter(id => id);
            const messageIds = messages.map(m => m.message_id).filter(id => id);
            console.log(`   IDs únicos (DB): ${new Set(dbIds).size} de ${dbIds.length}`);
            console.log(`   Message-IDs únicos: ${new Set(messageIds).size} de ${messageIds.length}`);

            // Detectar duplicados antes de filtrar
            const duplicateDbIds = dbIds.filter((id, idx) => dbIds.indexOf(id) !== idx);
            if (duplicateDbIds.length > 0) {
                console.warn(`   ⚠️ DUPLICADOS POR ID DE BD ENCONTRADOS EN FRONTEND: ${duplicateDbIds.length}`);
                console.warn(`      IDs duplicados: ${duplicateDbIds.slice(0, 5).join(', ')}`);
            }

            // DEDUPLICACIÓN ROBUSTA: Priorizar ID de BD (más confiable que message_id)
            const seenDbIds = new Set();
            const seenMessageIds = new Set();
            const seenFallbacks = new Set();
            const uniqueMessages = [];
            const duplicatesRemoved = [];

            for (const msg of messages) {
                // PRIORIDAD 1: ID de BD (más confiable)
                const dbId = msg.id;
                if (dbId) {
                    if (seenDbIds.has(dbId)) {
                        duplicatesRemoved.push({ type: 'db_id', id: dbId, asunto: msg.asunto?.substring(0, 40) });
                        continue;
                    }
                    seenDbIds.add(dbId);
                    uniqueMessages.push(msg);
                    continue;
                }

                // PRIORIDAD 2: Message-ID (si no hay ID de BD)
                const msgId = msg.message_id ? msg.message_id.toLowerCase().trim() : null;
                if (msgId) {
                    if (seenMessageIds.has(msgId)) {
                        duplicatesRemoved.push({ type: 'message_id', id: msgId.substring(0, 30), asunto: msg.asunto?.substring(0, 40) });
                        continue;
                    }
                    seenMessageIds.add(msgId);
                    uniqueMessages.push(msg);
                    continue;
                }

                // PRIORIDAD 3: Fallback (solo si no hay ID ni message_id)
                const fallbackKey = `${msg.created_at}_${msg.remitente}_${msg.asunto}`;
                if (seenFallbacks.has(fallbackKey)) {
                    duplicatesRemoved.push({ type: 'fallback', key: fallbackKey.substring(0, 50), asunto: msg.asunto?.substring(0, 40) });
                    continue;
                }
                seenFallbacks.add(fallbackKey);
                uniqueMessages.push(msg);
            }

            if (duplicatesRemoved.length > 0) {
                console.warn(`   ⚠️ Se eliminaron ${duplicatesRemoved.length} mensajes duplicados en frontend:`);
                duplicatesRemoved.slice(0, 5).forEach(dup => {
                    console.warn(`      - ${dup.type}: ${dup.id || dup.key}, asunto="${dup.asunto}"`);
                });
            }

            console.log(`   ✅ Mensajes únicos después de deduplicación: ${uniqueMessages.length}`);
            console.log(`   Thread ID: ${currentThreadId?.substring(0, 50) || 'N/A'}`);

            // VERIFICACIÓN: Asegurar que todos los mensajes pertenecen al thread correcto
            if (currentThreadId) {
                const wrongThread = uniqueMessages.filter(msg => {
                    const msgThreadId = msg.thread_id || '';
                    return msgThreadId !== currentThreadId;
                });
                if (wrongThread.length > 0) {
                    console.warn(`⚠️ ADVERTENCIA: ${wrongThread.length} mensajes no pertenecen al thread actual!`);
                    console.warn(`   Thread esperado: ${currentThreadId.substring(0, 50)}`);
                    wrongThread.forEach(msg => {
                        console.warn(`   - Mensaje ID ${msg.id}: thread_id="${msg.thread_id?.substring(0, 50)}"`);
                    });
                    // Filtrar mensajes que no pertenecen al thread
                    const filteredMessages = uniqueMessages.filter(msg => {
                        const msgThreadId = msg.thread_id || '';
                        return msgThreadId === currentThreadId;
                    });
                    console.log(`   ✅ Filtrando a ${filteredMessages.length} mensajes del thread correcto`);
                    if (filteredMessages.length === 0) {
                        document.getElementById('emailModalBody').innerHTML = `
                            <div style="text-align: center; padding: 40px; color: #999;">
                                <p>📭 No hay mensajes en esta conversación</p>
                                <button onclick="closeEmailModal()" style="margin-top: 20px; padding: 8px 16px; background: #6c757d; color: white; border: none; border-radius: 4px; cursor: pointer;">Cerrar</button>
                            </div>
                        `;
                        return;
                    }
                    // Continuar con los mensajes filtrados
                    uniqueMessages.length = 0;
                    uniqueMessages.push(...filteredMessages);
                }
            }

            // Ordenar mensajes: MÁS RECIENTE PRIMERO (descendente, como Outlook/Gmail)
            const sortedMessages = [...uniqueMessages].sort((a, b) => {
                return new Date(b.created_at) - new Date(a.created_at);
            });

            // Generate conversation HTML - formato limpio tipo Outlook/Gmail
            const conversationHtml = sortedMessages.map((msg, index) => {
                const isOut = msg.direccion === 'salida';
                const bgClass = isOut ? 'bg-out' : 'bg-in';

                // Parsear remitente (puede venir como "Nombre <email>" o solo "email")
                let remitenteNombre = '';
                let remitenteEmail = '';
                if (msg.remitente) {
                    const match = msg.remitente.match(/^(.+?)\s*<(.+?)>$/);
                    if (match) {
                        remitenteNombre = match[1].trim();
                        remitenteEmail = match[2].trim();
                    } else {
                        remitenteEmail = msg.remitente;
                        remitenteNombre = msg.remitente.split('@')[0];
                    }
                }

                // Parsear destinatario
                let destinatarioNombre = '';
                let destinatarioEmail = '';
                if (msg.destinatario) {
                    const match = msg.destinatario.match(/^(.+?)\s*<(.+?)>$/);
                    if (match) {
                        destinatarioNombre = match[1].trim();
                        destinatarioEmail = match[2].trim();
                    } else {
                        destinatarioEmail = msg.destinatario;
                        destinatarioNombre = msg.destinatario.split('@')[0];
                    }
                }

                // Parsear CC si existe
                let ccList = [];
                if (msg.cc) {
                    ccList = msg.cc.split(',').map(e => e.trim()).filter(e => e);
                }

                // Formatear fecha de manera más legible y compacta
                const fecha = new Date(msg.created_at);
                const hoy = new Date();
                const ayer = new Date(hoy);
                ayer.setDate(ayer.getDate() - 1);

                let fechaFormateada = '';
                if (fecha.toDateString() === hoy.toDateString()) {
                    fechaFormateada = `Hoy a las ${fecha.toLocaleTimeString('es-MX', { hour: '2-digit', minute: '2-digit' })}`;
                } else if (fecha.toDateString() === ayer.toDateString()) {
                    fechaFormateada = `Ayer a las ${fecha.toLocaleTimeString('es-MX', { hour: '2-digit', minute: '2-digit' })}`;
                } else {
                    fechaFormateada = fecha.toLocaleDateString('es-MX', {
                        day: 'numeric',
                        month: 'short',
                        year: fecha.getFullYear() !== hoy.getFullYear() ? 'numeric' : undefined,
                        hour: '2-digit',
                        minute: '2-digit'
                    });
                }

                // Limpiar el cuerpo del mensaje (eliminar texto citado)
                let cuerpoOriginal = msg.cuerpo || '';

                // Normalizar saltos de línea a \n (unificar formatos)
                cuerpoOriginal = cuerpoOriginal.replace(/\r\n/g, '\n').replace(/\r/g, '\n');

                // Limpiar texto citado pero preservar saltos de línea
                const cuerpoLimpio = cleanEmailBody(cuerpoOriginal);

                // Renderizar el cuerpo: usar texto plano con CSS white-space: pre-wrap
                // CRÍTICO: escapeHtml NO modifica los \n, solo escapa caracteres HTML peligrosos
                // El CSS white-space: pre-wrap renderiza los \n como saltos de línea visuales
                let cuerpoRenderizado = escapeHtml(cuerpoLimpio);

                // NO convertir \n a <br> - el CSS white-space: pre-wrap lo maneja automáticamente
                // Esto permite que los saltos de línea se muestren correctamente preservando el formato original

                // Get attachments from database (new way) or from JSON (backward compat)
                let attachmentsList = [];
                if (msg.attachments && msg.attachments.length > 0) {
                    // New way: from database
                    attachmentsList = msg.attachments;
                    console.log(`   📎 Adjuntos desde DB: ${attachmentsList.length} archivos`);
                } else if (msg.adjuntos) {
                    // Backward compat: from JSON string (formato antiguo de cotizaciones)
                    try {
                        const adjuntos = JSON.parse(msg.adjuntos);
                        // Asegurar que adjuntos sea un array
                        const adjuntosArray = Array.isArray(adjuntos) ? adjuntos : [adjuntos];
                        attachmentsList = adjuntosArray.map(a => {
                            // Manejar diferentes formatos: {nombre, tipo}, {filename, mime_type}, etc.
                            const nombre = a.filename || a.nombre || a.name || 'adjunto';
                            const tipo = a.mime_type || a.type || (nombre.endsWith('.pdf') ? 'application/pdf' : 'application/octet-stream');
                            return {
                                original_name: nombre,
                                filename: nombre,
                                nombre: nombre,
                                mime_type: tipo,
                                type: tipo,
                                size: a.size || 0,
                                url: a.url || null
                            };
                        });
                        console.log(`   📎 Adjuntos desde JSON: ${attachmentsList.length} archivos`, attachmentsList);
                    } catch (e) {
                        console.error('❌ Error parsing adjuntos JSON:', e, 'Raw adjuntos:', msg.adjuntos);
                    }
                }

                // Si hay cotizacion_id pero no hay adjuntos, crear un adjunto virtual para la cotización
                if (msg.cotizacion_id && attachmentsList.length === 0) {
                    console.log(`   📎 Creando adjunto virtual para cotización ID=${msg.cotizacion_id}`);
                    attachmentsList.push({
                        original_name: `Cotizacion_${msg.cotizacion_folio || msg.cotizacion_id}.pdf`,
                        filename: `Cotizacion_${msg.cotizacion_folio || msg.cotizacion_id}.pdf`,
                        nombre: `Cotizacion_${msg.cotizacion_folio || msg.cotizacion_id}.pdf`,
                        mime_type: 'application/pdf',
                        type: 'application/pdf',
                        size: 0,
                        url: null,
                        is_virtual: true // Marcar como virtual para no intentar descargar desde /api/attachments
                    });
                }

                const attachmentsHtml = attachmentsList.map(a => {
                    const isImage = (a.mime_type || a.type) && (a.mime_type || a.type).startsWith('image/');
                    const fileName = a.original_name || a.filename || a.nombre || a.name || 'adjunto';
                    const fileSize = a.size ? formatFileSize(a.size) : '';
                    const icon = getFileIcon(fileName);

                    // Si es una cotización vinculada, generar el enlace de descarga
                    let href = '#';
                    let target = '';

                    // PRIORIDAD 1: Si hay cotizacion_id y el archivo es una cotización PDF
                    // Verificar si es una cotización (case-insensitive, con o sin guión bajo/espacio)
                    const isCotizacion = msg.cotizacion_id && (
                        fileName.toLowerCase().includes('cotizacion') ||
                        fileName.toLowerCase().includes('cotiz') ||
                        (fileName.endsWith('.pdf') && msg.cotizacion_id)
                    );
                    if (isCotizacion) {
                        href = `/admin/cotizaciones/pdf/${msg.cotizacion_id}?download=true`;
                        target = 'target="_blank"';
                    }
                    // PRIORIDAD 2: Si tiene ID (nuevo sistema de attachments)
                    else if (a.id) {
                        href = `/api/attachments/${a.id}`;
                        target = 'download';
                    }
                    // PRIORIDAD 3: Si tiene URL directa
                    else if (a.url) {
                        href = a.url;
                        target = 'target="_blank"';
                    }

                    if (isImage && a.id) {
                        // Image with preview
                        return `
                            <div class="attachment-item" style="display: inline-block; margin-right: 8px; margin-bottom: 8px;">
                                <img src="/api/attachments/${a.id}/preview" 
                                     alt="${escapeHtml(fileName)}"
                                     style="max-width: 100px; max-height: 100px; border-radius: 4px; cursor: pointer; border: 1px solid #ddd;"
                                     onclick="window.open('/api/attachments/${a.id}/preview', '_blank')"
                                     title="${escapeHtml(fileName)}">
                                <a href="${href}" ${target === 'download' ? 'download' : target === 'target="_blank"' ? 'target="_blank"' : ''} style="display: block; font-size: 0.75em; color: #1976d2; margin-top: 2px;">${escapeHtml(fileName)}</a>
                            </div>
                        `;
                    } else {
                        // Regular file
                        return `
                            <div class="attachment-item" style="display: inline-flex; align-items: center; gap: 4px; padding: 6px 10px; background: #f5f5f5; border-radius: 12px; border: 1px solid #ddd; margin-right: 8px; margin-bottom: 8px;">
                                <span>${icon}</span>
                                <a href="${href}" ${target === 'download' ? 'download' : target === 'target="_blank"' ? 'target="_blank"' : ''} style="color: #1976d2; text-decoration: none; font-size: 0.9em;">${escapeHtml(fileName)}</a>
                                ${fileSize ? `<span style="color: #666; font-size: 0.8em;">(${fileSize})</span>` : ''}
                            </div>
                        `;
                    }
                }).join('');

                // Generar inicial para avatar
                const inicial = isOut ? 'Yo' : (remitenteNombre || remitenteEmail).charAt(0).toUpperCase();

                return `
                    <div class="email-message-card ${bgClass}">
                        <div class="email-message-header-clean">
                            <div class="email-avatar">
                                <div class="avatar-circle ${isOut ? 'avatar-out' : 'avatar-in'}">
                                    ${isOut ? '👤' : inicial}
                                </div>
                            </div>
                            <div class="email-header-content">
                                <div class="email-header-top">
                                    <div class="email-sender-main">
                                        <strong class="sender-name">${isOut ? 'Yo' : escapeHtml(remitenteNombre || remitenteEmail)}</strong>
                                        ${!isOut && remitenteEmail ? `<span class="sender-email">&lt;${escapeHtml(remitenteEmail)}&gt;</span>` : ''}
                                    </div>
                                    <div class="email-date-clean">
                                        ${fechaFormateada}
                                    </div>
                                </div>
                                <div class="email-recipients-clean">
                                    ${isOut ? `
                                        <span class="recipient-info">Para: <span class="recipient-email">${escapeHtml(destinatarioEmail || destinatarioNombre)}</span></span>
                                    ` : `
                                        <span class="recipient-info">De: <span class="recipient-email">${escapeHtml(remitenteEmail || remitenteNombre)}</span></span>
                                    `}
                                    ${ccList.length > 0 ? `
                                        <span class="recipient-info cc-info">CC: ${ccList.map(e => escapeHtml(e)).join(', ')}</span>
                                    ` : ''}
                                </div>
                            </div>
                        </div>
                        ${attachmentsHtml ? `
                            <div class="email-attachments-clean">
                                ${attachmentsHtml}
                            </div>
                        ` : ''}
                        <div class="email-message-body-clean">
                            ${cuerpoRenderizado || '<em style="color: #999; font-style: italic;">Sin contenido</em>'}
                        </div>
                        ${msg.cotizacion_folio ? `
                            <div class="email-linked-badge-clean">
                                <span class="linked-badge-icon">📄</span>
                                <span>Cotización: ${msg.cotizacion_folio}</span>
                            </div>
                        ` : ''}
                    </div>
                `;
            }).join('');

            // Obtener el primer y último mensaje para el header (más reciente = primero después de ordenar DESC)
            const latest = sortedMessages.length > 0 ? sortedMessages[0] : null;
            const first = sortedMessages.length > 0 ? sortedMessages[sortedMessages.length - 1] : null;

            if (!latest || !first) {
                console.error('❌ No se pudo determinar latest o first message');
                document.getElementById('emailModalBody').innerHTML = `
                    <div style="text-align: center; padding: 40px; color: #999;">
                        <p>📭 No hay mensajes en esta conversación</p>
                        <button onclick="closeEmailModal()" style="margin-top: 20px; padding: 8px 16px; background: #6c757d; color: white; border: none; border-radius: 4px; cursor: pointer;">Cerrar</button>
                    </div>
                `;
                return;
            }

            const body = `
                <div class="email-detail-header">
                    <div class="email-detail-subject">
                        <h3 style="margin: 0; color: #333; font-size: 1.2em; font-weight: 600;">${escapeHtml(latest.asunto || 'Sin asunto')}</h3>
                    </div>
                    <div class="email-detail-meta" style="margin-top: 10px; font-size: 0.9em; color: #666;">
                        <div style="display: flex; gap: 15px; flex-wrap: wrap;">
                            <div>
                                <span style="font-weight: 600; color: #999;">De:</span>
                                <span style="color: #333;">${escapeHtml(first.remitente || 'N/A')}</span>
                            </div>
                            <div>
                                <span style="font-weight: 600; color: #999;">Para:</span>
                                <span style="color: #333;">${escapeHtml(first.destinatario || 'N/A')}</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="thread-container">
                    ${conversationHtml}
                </div>

                <!-- Reply Section -->
                <div class="email-reply-section">
                    <h4>↩️ Responder al hilo</h4>
                    <div class="reply-form">
                        <div style="margin-bottom: 12px;">
                            <label style="font-size: 0.85em; color: #666; display: block; margin-bottom: 4px;">Para:</label>
                            <input type="text" id="replyTo" value="${latest.direccion === 'salida' ? latest.destinatario : latest.remitente}" 
                                style="width: 100%; padding: 10px; border: 2px solid #e0e0e0; border-radius: 6px; font-size: 0.95em;"
                                placeholder="email@cliente.com">
                        </div>
                        <div style="margin-bottom: 12px;">
                            <label style="font-size: 0.85em; color: #666; display: block; margin-bottom: 4px;">
                                CC (con copia): <small style="color: #999;">separar por comas</small>
                            </label>
                            <input type="text" id="replyCC" 
                                style="width: 100%; padding: 10px; border: 2px solid #e0e0e0; border-radius: 6px; font-size: 0.95em;"
                                placeholder="otro@email.com, jefe@empresa.com">
                        </div>
                        <textarea id="replyText" placeholder="Escribe tu respuesta aquí..."></textarea>
                        <div style="margin-bottom: 12px;">
                            <label style="font-size: 0.85em; color: #666; display: block; margin-bottom: 4px;">Adjuntos:</label>
                            <input type="file" id="replyAttachments" multiple accept="image/*,.pdf,.doc,.docx,.xls,.xlsx,.txt" 
                                style="width: 100%; padding: 8px; border: 2px solid #e0e0e0; border-radius: 6px; font-size: 0.9em;">
                            <div id="replyAttachmentsList" style="margin-top: 8px;"></div>
                        </div>
                        <div class="reply-form-actions">
                            <button class="btn-send-reply" onclick="sendReply('${latest.id}')">📤 Enviar Respuesta</button>
                            <button class="btn-cancel" onclick="closeEmailModal()">Cancelar</button>
                            <span class="reply-status" id="replyStatus">✅ Enviado</span>
                        </div>
                    </div>
                </div>
            `;

            // Add CSS for conversation view - diseño limpio tipo Outlook/Gmail
            const style = document.createElement('style');
            style.innerHTML = `
                .thread-badge { padding: 2px 8px; border-radius: 10px; font-size: 0.75em; font-weight: 600; }
                .thread-badge.unread { background: #ff4444; color: white; animation: pulse 2s infinite; }
                .thread-counter { background: #e0e0e0; color: #333; padding: 2px 8px; border-radius: 10px; font-size: 0.75em; margin-left: 5px; }
                .thread-container { 
                    display: flex; 
                    flex-direction: column; 
                    gap: 0; 
                    margin-bottom: 20px; 
                    max-height: 600px; 
                    overflow-y: auto; 
                    padding: 0;
                    background: #ffffff;
                    border-radius: 0;
                }
                .email-message-card { 
                    background: white;
                    border-bottom: 1px solid #e8e8e8;
                    padding: 20px 24px;
                    transition: background 0.2s;
                }
                .email-message-card:last-child {
                    border-bottom: none;
                }
                .email-message-card:hover {
                    background: #fafafa;
